<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="trainedge.cashtrack.LoginActivity">

    <EditText
        android:id="@+id/edtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edtPassword"
        android:layout_marginRight="16dp"
        android:layout_marginTop="156dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="Enter your E-mail Id"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textColorHint="#eee"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtID"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textColorHint="#eee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtID"
        android:layout_alignBottom="@+id/edtID"
        android:layout_alignStart="@+id/textView3"
        android:drawableLeft="@drawable/ic_local_post_office_black_24dp"
        android:text="User Id "
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtPassword"
        android:layout_alignBottom="@+id/edtPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:text="Password"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnlogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtPassword"
        android:layout_below="@+id/edtPassword"
        android:layout_marginTop="34dp"
        android:text="Login" />

    <TextView
        android:id="@+id/txtforgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Forgot Password ?"
        android:textAlignment="viewStart"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="18sp"
        android:layout_below="@+id/btnlogin"
        android:layout_alignStart="@+id/btnlogin" />

    <TextView
        android:id="@+id/txtSingnup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtforgotPassword"
        android:layout_below="@+id/txtforgotPassword"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="New User SignUp "
        android:textAlignment="viewStart"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="18sp" />
</RelativeLayout>
